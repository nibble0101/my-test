<?xml version="1.0" encoding="UTF-8"?>
<interface>
  <requires lib="gtk" version="4.10" />
  <requires lib="Adw" version="1.0" />
  <template class="MyPreferencesWindow" parent="AdwPreferencesWindow">
    <property name="default_width">300</property>
    <property name="default_height">400</property>
    <property name="modal">true</property>
    <property name="title">Preferences</property>
    <property name="destroy_with_parent">true</property>
    <child>
      <object class="AdwPreferencesPage">
        <property name="name">preferences</property>
        <property name="title">Preferences</property>
        <child>
          <object class="AdwPreferencesGroup">
            <property name="title">Color Theme Settings</property>
            <property name="description">Set color theme</property>
            <child>
              <object class="AdwPreferencesRow">
                <style>
                  <class name="preferred-color-scheme-row" />
                </style>
                <property name="title">Color theme</property>
                <property name="title_selectable">true</property>
                <child>
                  <object class="GtkBox">
                    <property name="orientation">horizontal</property>
                    <property name="valign">3</property>
                    <property name="halign">0</property>
                    <property name="hexpand">true</property>
                    <child>
                      <object class="GtkBox">
                        <property name="orientation">horizontal</property>
                        <property name="valign">3</property>
                        <property name="halign">1</property>
                        <property name="hexpand">true</property>
                        <child>
                          <object class="GtkCheckButton" id="system">
                            <property name="label">System</property>
                            <property name="active">true</property>
                          </object>
                        </child>
                      </object>
                    </child>
                    <child>
                      <object class="GtkBox">
                        <property name="orientation">horizontal</property>
                        <property name="valign">3</property>
                        <property name="halign">3</property>
                        <property name="hexpand">true</property>
                        <child>
                          <object class="GtkCheckButton" id="light">
                            <property name="label">Light</property>
                            <property name="group">system</property>
                          </object>
                        </child>
                      </object>
                    </child>
                    <child>
                      <object class="GtkBox">
                        <property name="orientation">horizontal</property>
                        <property name="valign">3</property>
                        <property name="halign">2</property>
                        <property name="hexpand">true</property>
                        <child>
                          <object class="GtkCheckButton" id="dark">
                            <property name="label" translatable="yes">Dark</property>
                            <property name="group" translatable="yes">system</property>
                          </object>
                        </child>
                      </object>
                    </child>
                  </object>
                </child>
              </object>
            </child>
          </object>
        </child>
        <child>
          <object class="AdwPreferencesGroup">
            <property name="title" translatable="yes">Color Settings</property>
            <property name="description" translatable="yes">Saved color settings</property>
            <child>
              <object class="AdwActionRow">
                <property name="title" translatable="yes">Delete Colors</property>
                <property name="subtitle" translatable="yes">Delete all saved colors</property>
                <property name="activatable-widget">delete-saved-colors</property>
                <child>
                  <object class="GtkButton" id="delete-saved-colors">
                    <style>
                      <class name="suggested-action" />
                    </style>
                    <property name="icon-name">user-trash-symbolic</property>
                    <property name="valign">center</property>
                    <property name="halign">center</property>
                    <property name="action-name">app.delete-saved-colors</property>
                  </object>
                </child>
              </object>
            </child>
            <child>
              <object class="AdwComboRow" id="colorFormatSettings">
                <property name="title" translatable="yes">Color Format</property>
                <property name="subtitle" translatable="yes">Select color format to display</property>
                <property name="model">
                  <object class="GtkStringList">
                    <items>
                      <item translatable="yes">HEX</item>
                      <item translatable="yes">RGB</item>
                      <item translatable="yes">RGB PERCENT</item>
                      <item translatable="yes">HSL</item>
                      <item translatable="yes">HSV</item>
                    </items>
                  </object>
                </property>
                <property name="selected">5</property>
              </object>
            </child>
          </object>
        </child>
      </object>
    </child>
  </template>
</interface>